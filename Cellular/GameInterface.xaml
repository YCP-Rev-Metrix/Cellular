<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cellular.GameInterface"
             xmlns:local="clr-namespace:Cellular.ViewModel"
             x:DataType="local:GameInterfaceViewModel">

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Player Picker -->
            <StackLayout Grid.Row="0" Grid.Column="0">
                <Picker Height="20" Width="100" ItemsSource="{Binding Players}"></Picker>
            </StackLayout>

            
            <!-- Pin Buttons -->
            <StackLayout Grid.Row="1" Grid.Column="1" Orientation="Vertical">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Button Text="7"></Button>
                    <Button Text="8"></Button>
                    <Button Text="9"></Button>
                    <Button Text="10"></Button>
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Button Text="4"></Button>
                    <Button Text="5"></Button>
                    <Button Text="6"></Button>
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Button Text="2"></Button>
                    <Button Text="3"></Button>
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Button Text="1"></Button>
                </StackLayout>
            </StackLayout>
            
            <!-- Quick Scoring Buttons -->
            <StackLayout Grid.Row="1" Grid.Column="2" Orientation="Vertical">
                <Button Text="F"></Button>
                <Button Text="_"></Button>
                <Button Text="/"></Button>
                <Button Text="X"></Button>
            </StackLayout>
        </Grid>
    </ScrollView>

</ContentPage>
