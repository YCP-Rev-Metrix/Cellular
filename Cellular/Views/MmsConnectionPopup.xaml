<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             x:Class="Cellular.Views.MmsConnectionPopup"
             CanBeDismissedByTappingOutsideOfPopup="True">

    <Border StrokeShape="RoundRectangle 10" 
            Padding="20" 
            BackgroundColor="White"
            StrokeThickness="2"
            Stroke="LightGray">
        <VerticalStackLayout Spacing="15" WidthRequest="300">

            <Label Text="MMS Connection" 
                   FontSize="22" 
                   TextColor="Black"
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />

            <BoxView HeightRequest="1" Color="Gray" Opacity="0.5" WidthRequest="250"/>

            <Label x:Name="MacAddressLabel"
                   Text="MAC Address: Not Connected"
                   HorizontalOptions="Center" 
                   TextColor="Black"
                   FontSize="16"
                   Margin="0,10,0,0" />

            <Label x:Name="StatusLabel"
                   Text="Status: Disconnected"
                   HorizontalOptions="Center" 
                   TextColor="Gray"
                   FontSize="14"
                   Margin="0,0,0,10" />

            <StackLayout Orientation="Horizontal" 
                        HorizontalOptions="Center" 
                        Spacing="15"
                        Margin="0,10,0,0">

                <Button x:Name="ConnectButton"
                        Text="Connect" 
                        WidthRequest="120" 
                        BackgroundColor="Green"
                        TextColor="White"
                        IsVisible="False"
                        Clicked="OnConnectClicked" />

                <Button x:Name="DisconnectButton"
                        Text="Disconnect" 
                        WidthRequest="120" 
                        BackgroundColor="Red"
                        TextColor="White"
                        IsVisible="False"
                        Clicked="OnDisconnectClicked" />

                <Button Text="Close" 
                        WidthRequest="120" 
                        BackgroundColor="LightGray"
                        Clicked="OnCloseClicked" />

            </StackLayout>

        </VerticalStackLayout>
    </Border>
</toolkit:Popup>
