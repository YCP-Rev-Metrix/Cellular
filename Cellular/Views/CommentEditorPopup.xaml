<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
               x:Class="Cellular.Views.CommentEditorPopup"
               CanBeDismissedByTappingOutsideOfPopup="False">

    <Border StrokeShape="RoundRectangle 10" Padding="20" BackgroundColor="White">
        <StackLayout Spacing="10" WidthRequest="300">

            <Label Text="Comment Editor" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />

            <Editor x:Name="CommentEntry"
                    Placeholder="Enter your comment here..."
                    HeightRequest="150"
                    BackgroundColor="WhiteSmoke"
                    TextColor="Black"
                    Text="{Binding CurrentCommentText}"
                    Margin="0, 10, 0, 10" />

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20">

                <Button Text="Cancel" 
                        WidthRequest="100" 
                        BackgroundColor="LightGray"
                        Clicked="OnCancelClicked" />

                <Button Text="Save" 
                        WidthRequest="100" 
                        BackgroundColor="DarkSlateGray"
                        TextColor="White"
                        Clicked="OnSaveClicked" />

            </StackLayout>

        </StackLayout>
    </Border>
</toolkit:Popup>