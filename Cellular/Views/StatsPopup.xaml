<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
               x:Class="Cellular.Views.StatsPopup"
               xmlns:vm="clr-namespace:Cellular.ViewModel"
               CanBeDismissedByTappingOutsideOfPopup="False">

    <Border StrokeShape="RoundRectangle 10" 
            Padding="20" 
            BackgroundColor="White">

        <VerticalStackLayout Spacing="15" WidthRequest="300">

            <Label Text="Stats" 
                   FontSize="22" 
                   TextColor="Black"
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />

            <BoxView HeightRequest="1" Color="Gray" Opacity="0.5" WidthRequest="200"/>

            <Label Text="{Binding StrikePercent, StringFormat='Strike: {0:P0}'}"
                   HorizontalOptions="Center" 
                   TextColor="Black"
                   FontSize="16" />

            <Label Text="{Binding SparePercent, StringFormat='Spare: {0:P0}'}"
                   HorizontalOptions="Center" 
                   TextColor="Black"
                   FontSize="16" />

            <Label Text="{Binding OpenPercent, StringFormat='Open: {0:P0}'}"
                   HorizontalOptions="Center" 
                   TextColor="Black"
                   FontSize="16" />

            <Label Text="{Binding GameAverage, StringFormat='GameAverage: {0:N2}'}"
                   HorizontalOptions="Center" 
                   TextColor="Black"
                   FontSize="16" />

            <Button Text="Close"
                    Clicked="OnCloseClicked"
                    Margin="0,20,0,0"
                    HorizontalOptions="Center"
                    WidthRequest="120" />

        </VerticalStackLayout>
    </Border>
</toolkit:Popup>