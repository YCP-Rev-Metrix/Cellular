<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cellular.BlankPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Image
                Source="logo.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="RevMetrix Bowling Ball Logo" />

            <Label
                Text="Smart Watch"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <!-- Scan Button -->
            <Button
                x:Name="ScanButton"
                Text="Scan"
                 
                HorizontalOptions="Fill" />

            <Label
                x:Name="StatusLabel"
                Text="Ready to scan"
                FontSize="16"
                TextColor="Gray" />

            <Label
                Text="Available Devices:"
                FontSize="18"
                FontAttributes="Bold" />

            <CollectionView
                x:Name="DeviceListView"
                ItemsSource="{Binding Devices}"
                SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                Text="{Binding Name}"
                                FontSize="16"
                                FontAttributes="Bold" />

                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                Text="{Binding Id}"
                                FontSize="12"
                                TextColor="Gray" />

                            <Label
                                Grid.Row="0"
                                Grid.Column="1"
                                Text="{Binding Rssi, StringFormat='{0} dBm'}"
                                FontSize="14"
                                TextColor="Gray"
                                VerticalOptions="Center" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Connect Button -->
            <Button
                x:Name="ConnectButton"
                Text="Connect"
                IsEnabled="{Binding CanConnect}"
                HorizontalOptions="Fill" />

            <!-- Disconnect Button -->
            <Button
                x:Name="DisconnectButton"
                Text="Disconnect"
                IsEnabled="{Binding CanDisconnect}"
                HorizontalOptions="Fill" />

            <!-- Send JSON Button (FIXED NAME) -->
            <Button 
                x:Name="JsonSendButton"
                Text="Send Test JSON to Watch"
                IsEnabled="{Binding CanSend}"
                HorizontalOptions="Fill" />

            <!-- Device Info -->
            <Label
                x:Name="DeviceInfoLabel"
                Text=""
                FontSize="14"
                TextColor="Blue" />
            <Label
                Text="Watch JSON:"
                FontSize="16"
                TextColor="Grey"/>

            <Frame
                BackgroundColor="#EEEEEE"
                BorderColor="Black"
                CornerRadius="6"
                Padding="10">

                <Label
                    x:Name="WatchJsonLabel"
                    Text="Waiting for JSON…"
                    TextColor="Black"
                    FontSize="14" />

            </Frame>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
