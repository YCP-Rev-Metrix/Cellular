<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cellular.Stats"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="logo.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="RevMetrix Bowling Ball Logo" />

            <Grid HorizontalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <!-- Left Column with fixed width -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Center column with responsive width -->
                    <ColumnDefinition Width="Auto" />
                    <!-- Right Column with fixed width -->
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackLayout Grid.Column="0" Grid.Row="0">
                    <StackLayout>
                        <DatePicker MinimumDate="{Binding MinDate}"
                            MaximumDate="{Binding MaxDate}"
                            Date="{Binding SelectedDate}"
                            x:Name="StartDate"
                            Grid.Column="0"
                            WidthRequest="100"/>
                    </StackLayout>

                    <Picker x:Name="SessionPicker"
                        Title="Session"
                        Grid.Column="1"/>

                    <Picker x:Name="GamePicker"
                        Title="Game"
                        Grid.Column="1"/>

                    <Picker x:Name="LanesPicker"
                        Title="Lanes"
                        Grid.Column="1"/>
                </StackLayout>

                <StackLayout Grid.Column="3" Grid.Row="0">
                    <StackLayout>
                        <DatePicker MinimumDate="{Binding MinDate}"
                            MaximumDate="{Binding MaxDate}"
                            Date="{Binding SelectedDate}"
                            x:Name="EndDate"
                            Grid.Column="0"
                            WidthRequest="100"/>
                    </StackLayout>

                    <Picker x:Name="EventPicker"
                        Title="Event"
                        Grid.Column="1"/>

                    <Picker x:Name="BallPicker"
                        Title="Ball"
                        Grid.Column="1"/>

                    <Picker x:Name="FramePicker"
                        Title="Frame"
                        Grid.Column="1"/>
                </StackLayout>

                <StackLayout Grid.Column="2" Grid.Row="1" VerticalOptions="Center">
                    <Picker x:Name="StatTypePicker"
                        Title="Stat Type"
                        Grid.Column="1"/>
                    <Button
                        x:Name="LoadStatsButton"
                        Text="Load Stats"
                        WidthRequest="100"/>
                </StackLayout>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
